<?php
/*
Lag en valideringsklasse med en metode som kan validere hvorvidt en e-postadresse er gyldig. Skriv ut
resultatet av en validering på skjermen
*/

class Validering {
   
    public static function validerEpost($epost) {
        if (filter_var($epost, FILTER_VALIDATE_EMAIL)) { // Bruker filter_var for å validere e-postadressen
            return "E-postadressen <strong>'{$epost}'</strong> er gyldig.";
        } else {
            return "E-postadressen <strong>'{$epost}'</strong> er ikke gyldig.";
        }
    }
}


// Eksempel på e-postadresser som skal valideres
$epostGyldig = "Kari@nordmann.no";
$epostUgyldig = "ugyldig-epost@.com";

// Test validering av gyldig e-postadresse
echo Validering::validerEpost($epostGyldig) . "<br>"; // bruker scope resolution operator for å kalle klassen Validering´s metode validerEpost() uten å opprette et objekt av klassen

// Test validering av ugyldig e-postadresse
echo Validering::validerEpost($epostUgyldig) . "<br>";


?>